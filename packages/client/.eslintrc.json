{
    "extends": [
        "@nuxtjs/eslint-config-typescript"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": "off",
        "vue/html-indent": [
            "error",
            4
        ]
    }
}
